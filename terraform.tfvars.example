# Example Terraform variables file
# Copy this to terraform.tfvars and modify values as needed

# LDAP Server Configuration
ldap_host = "localhost"
ldap_port = 389

# LDAP Directory Configuration  
ldap_base_dn = "dc=example,dc=org"

# LDAP Authentication
ldap_bind_user     = "cn=admin,dc=example,dc=org"
ldap_bind_password = "admin"  # Change this in production!

# Security Settings
use_tls = false  # Set to true for production LDAPS

# LDAP Groups to Query
ldap_groups = ["administrators", "developers", "users"]

# Terraform Cloud Configuration
# SECURITY: TFE_TOKEN should be set as an environment variable, not in this file
# Example: export TFE_TOKEN="your-api-token-here"
create_tfe_teams  = false  # Set to true to create teams in Terraform Cloud
# tfe_organization  = "your-org-name"  # Your Terraform Cloud organization
team_visibility  = "organization"   # "organization" or "secret"
team_prefix      = "ldap-"          # Prefix for team names
